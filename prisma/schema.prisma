generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Submission {
  id String @id @default(uuid())
  createdAt DateTime @default(now()) @map("created_at")
  name String
  email String
  message String

  @@map("submissions")
}

model Language {
  name String @id @unique
  projectsOwned Int @default(0)
  projectsContributed Int @default(0)
  lastFetched DateTime @default(now()) @map("last_fetched")

  @@map("languages")
}